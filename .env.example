# Environment Variables Template
# Copy this file to .env and fill in your values
# DO NOT commit .env to git

# ============================================
# DATABASE CONFIGURATION
# ============================================
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=predictive_maintenance
DATABASE_USER=postgres
DATABASE_PASSWORD=your_secure_password_here

# Connection string (auto-constructed or override)
DATABASE_URL=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/${DATABASE_NAME}

# ============================================
# REDIS CONFIGURATION
# ============================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}/${REDIS_DB}

# ============================================
# MLFLOW CONFIGURATION
# ============================================
MLFLOW_TRACKING_URI=http://localhost:5000
MLFLOW_BACKEND_STORE_URI=postgresql://${DATABASE_USER}:${DATABASE_PASSWORD}@${DATABASE_HOST}:${DATABASE_PORT}/mlflow
MLFLOW_ARTIFACT_ROOT=./data/mlflow/artifacts
MLFLOW_EXPERIMENT_NAME=predictive_maintenance

# ============================================
# API CONFIGURATION
# ============================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=3
API_RELOAD=true  # Set false in production

# Security
API_SECRET_KEY=change_this_to_random_string_use_openssl_rand_hex_32
API_ALGORITHM=HS256
API_ACCESS_TOKEN_EXPIRE_MINUTES=60

# Rate limiting
API_RATE_LIMIT=100  # requests per minute per key

# ============================================
# MODEL CONFIGURATION
# ============================================
MODEL_VERSION=latest
MODEL_NAME=predictive_maintenance_ensemble
XGBOOST_WEIGHT=0.6
LSTM_WEIGHT=0.4

# ============================================
# TRAINING CONFIGURATION
# ============================================
TRAINING_BATCH_SIZE=256
LSTM_EPOCHS=10
LSTM_LEARNING_RATE=0.001
OPTUNA_TRIALS=50

# GPU Configuration
# NOTE: RTX 5060 uses Ada architecture (sm_120) not yet fully supported in released PyTorch
# Set to -1 for CPU mode (recommended for now), or 0 to attempt GPU if custom PyTorch build
CUDA_VISIBLE_DEVICES=-1

# ============================================
# MONITORING CONFIGURATION
# ============================================
PROMETHEUS_URL=http://localhost:9090
GRAFANA_URL=http://localhost:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=your_secure_password_here

# Alerting
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ALERT_EMAIL=your-email@example.com

# ============================================
# DRIFT DETECTION
# ============================================
DRIFT_DETECTION_INTERVAL_HOURS=6
DRIFT_PSI_THRESHOLD=0.25
DRIFT_FEATURE_THRESHOLD=0.30

# ============================================
# FEATURE STORE
# ============================================
FEATURE_STORE_TTL_DAYS=90
FEATURE_VERSION=v1

# ============================================
# DATA PATHS
# ============================================
DATA_RAW_PATH=./data/raw
DATA_PROCESSED_PATH=./data/processed
DATA_FEATURES_PATH=./data/features
MODEL_ARTIFACTS_PATH=./data/models

# ============================================
# LOGGING
# ============================================
LOG_LEVEL=INFO  # DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_FORMAT=json  # json or text
LOG_FILE=./logs/app.log

# ============================================
# PROJECT SETTINGS
# ============================================
PROJECT_NAME=predictive-maintenance-mlops
ENVIRONMENT=development  # development, staging, production
DEBUG=true
